<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RootNamespace>msbuild_downloadfile</RootNamespace>
    <FileUrl>https://releases.ubuntu.com/20.04/ubuntu-20.04-desktop-amd64.iso</FileUrl>
  </PropertyGroup>

  <Target Name="DownloadExternalFile" BeforeTargets="BeforeCompile">
    <DownloadFile
      SourceUrl="$(FileUrl)"
      DestinationFolder="$(BaseIntermediateOutputPath)\Download">
    </DownloadFile>
  </Target>

</Project>
